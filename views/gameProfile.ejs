<%- include('./partials/head') %>
    <%- include('./partials/header') %>

        <body>
            <div class="container">
                <div class="card mb-3">
                    <img src="/uploads/<%=game.image%>" class="card-img-top" 
                      alt="<%=game.image%>"
                      onerror="this.onerror=null; this.src='/img/game-default.jpg'">
                    <div class="card-body">
                      <h5 class="card-title"><%=game.name%></h5>
                      <p class="card-text"><%=game.gameProfile.desc%></p>
                      <table class="table">
                        <tbody>
                          <tr>
                            <td>Release Date</td>
                            <td><%=date(game.gameProfile.release_date)%></td>
                          </tr>
                          <tr>
                            <td>Price</td>
                            <td><%= rupiah(game.price)%></td>
                          </tr>
                          <tr>
                            <td>Developer</td>
                            <td><%=game.gameProfile.developer%></td>
                          </tr>
                          <tr>
                            <td>Publisher</td>
                            <td><%=game.gameProfile.publisher%></td>
                          </tr>
                          <tr>
                            <td>Genre</td>
                            <td>
                                <% 
                                let genres
                                genres = game.genres %>
                                <% genres.forEach(genre=> { %>
                                <% if(genre.name !== null) { %>
                                    <small class="card-text col"><span class="badge bg-primary"><%=genre.name%></span></small>
                                <% } else { %>
                                    <small class="card-text col"><span class="badge bg-primary">unidentified</span></small>  
                                <% } %>
                                <% }) %>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                      <div>
                        <a href="/game/update/<%=game.id%>"><button type="button" class="btn btn-primary">Update</button></a>
                        <a href="/game/delete/<%=game.id%>"><button type="button" class="btn btn-primary">Delete</button></a></div>
                      </div>
                </div>
            </div>
        </body>

<%- include('./partials/footer') %>