    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <title>Game Store</title>
    <style>
        * {
            color: black;
        }

        body>div.container {
            min-height: 80vh;
        }

        a {
            text-decoration: none;
        }

        .card-game {
            transition: 0.5s;
        }

        .card-game:hover {
            transform: scale(1.08);
            transition: 0.5s;
        }

        /* .card-title {
            
        } */

        .card-body .border-bottom {
            margin-bottom: 5px;
        }

        .btn {
            transition: 0.2s;
        }

        .btn:hover {
            transform: scale(1.05);
            transition: 0.2s;
        }

        .nav-link {
            transition: 0.2s;
        }

        .nav-link:hover {
            transform: scale(1.05);
            transition: 0.2s; 
            color: white;
            background-color: #0d6efd;
        }
    </style>
